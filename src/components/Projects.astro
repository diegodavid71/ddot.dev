---
import Section from './Section.astro';

const projects = [
	{
		title: 'Project 1',
		description: 'Brief description of your first project and the technologies used.',
		link: '#',
		tags: ['React', 'TypeScript', 'Tailwind']
	},
	{
		title: 'Project 2',
		description: 'Brief description of your second project and the technologies used.',
		link: '#',
		tags: ['Astro', 'Node.js', 'MongoDB']
	},
	{
		title: 'Project 3',
		description: 'Brief description of your third project and the technologies used.',
		link: '#',
		tags: ['Python', 'FastAPI', 'PostgreSQL']
	}
];
---

<Section>
	<div class="py-6">
		<h2 class="pb-6 text-3xl font-bold">Projects</h2>
		<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
			{
				projects.map((project) => (
					<a
						href={project.link}
						class="group rounded-2xl bg-stone-200/50 from-orange-900 via-amber-700 to-white p-[1px] shadow-[inset_0_0_0_1px_rgba(255,255,255,0.4)] transition-all hover:bg-gradient-to-r dark:bg-gray-900"
					>
						<div class="flex h-full flex-col rounded-[1rem] bg-stone-300 p-6 opacity-90 transition-all group-hover:opacity-100 dark:bg-stone-800">
							<h3 class="mb-3 text-xl font-bold text-gray-900 dark:text-white">
								{project.title}
							</h3>
							<p class="mb-4 flex-grow text-sm text-gray-700 dark:text-gray-300">
								{project.description}
							</p>
							<div class="flex flex-wrap gap-2">
								{project.tags.map((tag) => (
									<span class="rounded-lg bg-orange-600/10 px-3 py-1 text-xs font-medium text-orange-600 dark:bg-orange-600/20">
										{tag}
									</span>
								))}
							</div>
						</div>
					</a>
				))
			}
		</div>
	</div>
</Section>
